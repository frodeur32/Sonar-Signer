    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const togglePassword = document.getElementById('togglePassword');
        const password = document.getElementById('password');

        togglePassword.addEventListener('click', function() {
            const type = password.type === 'password' ? 'text' : 'password';
            password.type = type;

            this.classList.toggle('fa-eye-slash');
        });

        function updateFilePreview(input, previewElement) {
            if (input.files.length > 0) {
                previewElement.textContent = input.files[0].name;
            } else {
                previewElement.textContent = '';
            }
        }

        document.getElementById('ipa').addEventListener('change', function() {
            updateFilePreview(this, document.getElementById('ipaPreview'));
        });

        document.getElementById('prov').addEventListener('change', function() {
            updateFilePreview(this, document.getElementById('provPreview'));
        });

        document.getElementById('p12').addEventListener('change', function() {
            updateFilePreview(this, document.getElementById('p12Preview'));
        });

        function progressHandler(event) {
            var percent = event.loaded / event.total;
            const progressBar = document.getElementById("progressBar");
            progressBar.style.width = percent * 100 + '%';
        }

        document.getElementById('store').addEventListener('click', function() {
            if (this.checked) {
                Swal.fire({
                    text: "This will store your P12 and MobileProvision on the server. A password will still be required to sign.",
                    title: "Are you sure?",
                    icon: "info",
                    showCancelButton: true,
                    confirmButtonText: "Yes, I'm sure",
                    cancelButtonText: "Cancel",
                }).then((result) => {
                    if (!result.isConfirmed) {
                        this.checked = false;
                    }
                });
            }
        });

        document.getElementById('uploadipa').addEventListener('click', function() {
            var formData = new FormData();
            formData.append("ipa", document.getElementById("ipa").files[0]);
            formData.append("mp", document.getElementById("prov").files[0]);
            formData.append("p12", document.getElementById("p12").files[0]);
            formData.append("password", document.getElementById("password").value);
            formData.append("expiryDays", "5");

            // Show the loading icon
            document.getElementById("loadingIcon").style.display = 'block';

            var xhr = new XMLHttpRequest();
            xhr.open("POST", "https://install.applecertdev.xyz/sign", true);
            xhr.upload.addEventListener("progress", progressHandler, false);
            
            xhr.onload = function() {
                // Hide the loading icon
                document.getElementById("loadingIcon").style.display = 'none';

                if (xhr.status === 200) {
                    var data = JSON.parse(xhr.responseText);
                    if (data.install_url) {
                        Swal.fire({
                            text: "IPA signed and ready to install!",
                            icon: "success",
                            confirmButtonText: "Install IPA",
                            cancelButtonText: "Copy URL",
                            showCancelButton: true,
                        }).then(function(result) {
                            if (result.isConfirmed) {
                                window.location.href = data.install_url;
                            } else {
                                navigator.clipboard.writeText(data.install_url);
                            }
                        });
                    } else {
                        Swal.fire({
                            text: data.message,
                            icon: "error",
                            confirmButtonText: "Ok, got it",
                        });
                    }
                }
            };
            xhr.send(formData);
        });
    </script>
